{
  "name": "airplane-battle-server",
  "version": "1.0.0",
  "description": "飞机大战游戏服务端",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "db:migrate": "tsx src/database/migrate.ts",
    "db:seed": "tsx src/database/seed.ts",
    "mongo:migrate": "tsx src/database/migrationTool.ts migrate",
    "mongo:validate": "tsx src/database/migrationTool.ts validate",
    "mongo:reset": "tsx src/database/migrationTool.ts reset --confirm",
    "mongo:stats": "tsx src/database/migrationTool.ts stats",
    "mongo:indexes": "tsx src/database/migrationTool.ts init-indexes",
    "mongo:test": "tsx src/database/migrationTool.ts test-connection",
    "mongo:full": "tsx src/database/migrationTool.ts full-migration"
  },
  "keywords": [
    "airplane-battle",
    "game",
    "multiplayer"
  ],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@types/mongoose": "^5.11.97",
    "bcrypt": "^5.1.1",
    "commander": "^12.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "helmet": "^7.2.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.18.2",
    "morgan": "^1.10.1",
    "pg": "^8.16.3",
    "redis": "^4.7.1",
    "socket.io": "^4.8.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.19.17",
    "@types/pg": "^8.15.5",
    "@types/uuid": "^9.0.8",
    "jest": "^29.7.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2"
  }
}
