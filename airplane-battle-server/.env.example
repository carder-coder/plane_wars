# 服务器配置
PORT=3001
NODE_ENV=development

# 数据库类型选择 (postgresql | mongodb)
# 推荐使用 mongodb，因为项目已针对 MongoDB 优化
DATABASE_TYPE=mongodb

# MongoDB配置
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_DATABASE=airplane_battle
MONGO_USERNAME=gxadmin
MONGO_PASSWORD=mongogxpw3489
MONGO_AUTH_SOURCE=admin
MONGO_SSL=false
MONGO_REPLICA_SET=

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT配置
# 生产环境请更改为强密钥
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# CORS配置
# 请根据实际部署环境修改域名
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://your-server-ip

# 日志配置
LOG_LEVEL=debug

# 游戏配置
MAX_ROOMS=100
MAX_PLAYERS_PER_ROOM=2
ROOM_TIMEOUT=1800000

# 安全配置
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 监控配置
ENABLE_METRICS=true
METRICS_PORT=9090

# 部署配置
CLUSTER_MODE=false
CLUSTER_WORKERS=auto
GRACEFUL_SHUTDOWN_TIMEOUT=30000